{
	"compilerOptions": {
		"paths": {
			"*": ["node_modules/*"],
			"src/*": ["src/*"],
			"@internal/*": ["./*"]
		},
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	}
}
